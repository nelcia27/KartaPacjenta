<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.CheckBox?>
<BorderPane fx:id="mainPane"
            styleClass="main_pane"
            stylesheets="/style/main.css"
            xmlns:fx="http://javafx.com/fxml/1"
            xmlns="http://javafx.com/javafx/10.0.2-internal">

    <top>
        <Button onAction="#returnTo" styleClass="filtrCombo">Wróć</Button>
    </top>
    <center>
        <VBox alignment="BASELINE_CENTER" spacing="20">
            <Label>Wartość:</Label>
            <TextField styleClass="editField" fx:id="valueUpdate"/>
            <Label>Jednostka:</Label>
            <TextField styleClass="editField" fx:id="unitUpdate"/>
            <Button onAction="#updateObservation" styleClass="filtrCombo">Zapisz</Button>
        </VBox>

    </center>

</BorderPane>
